<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>

        <shape

            android:shape="rectangle">

            <solid
                android:color="@color/purple_500"/>
            <corners
                android:radius="20dp"/>
            <size
                android:height="30dp"
                android:width="300dp"/>
        </shape>

    </item>

    <item>
        <scale
            android:scaleWidth="100%">

            <shape

                android:shape="rectangle">

                <solid
                    android:color="@color/myColor"/>
                <corners
                    android:radius="20dp"/>
                <size
                    android:height="30dp"
                    android:width="400dp"/>
            </shape>

        </scale>



    </item>






</layer-list>