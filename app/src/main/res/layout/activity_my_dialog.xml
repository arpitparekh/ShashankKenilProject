<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.MyDialog">

    <Button
        android:id="@+id/btnd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="dialog1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:text="dialog2"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnd3"
        app:layout_constraintEnd_toStartOf="@+id/btnd3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="8dp"
        android:text="dialog3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnd2"
        app:layout_constraintTop_toBottomOf="@+id/btnd1" />

    <Button
        android:id="@+id/btnd4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="59dp"
        android:text="dialog4"
        app:layout_constraintEnd_toEndOf="@+id/btnd3"
        app:layout_constraintStart_toStartOf="@+id/btnd2"
        app:layout_constraintTop_toBottomOf="@+id/btnd3" />

    <Button
        android:id="@+id/btnd5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:text="dialog5"
        app:layout_constraintStart_toStartOf="@+id/btnd4"
        app:layout_constraintTop_toBottomOf="@+id/btnd4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9FA5F8"
        android:id="@+id/edtRootName"
        android:text="Custom text"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="391dp" />
</androidx.constraintlayout.widget.ConstraintLayout>